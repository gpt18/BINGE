<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="👨‍💻 Developer"
        android:textSize="24sp"
        android:padding="10dp"
        android:background="@drawable/bg_dialog_header"
        android:textColor="#FFFFFF" />



   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">


           <TextView
               android:id="@+id/textView3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="16dp"
               android:paddingRight="16dp"
               android:paddingTop="16dp"
               android:text="BINGE+ App is Created with 💖 by G. Prajapati."
               android:textSize="18sp"
               android:textColor="#FFFFFF" />

           <View
               android:id="@+id/divider2"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="?android:attr/listDivider" />

           <TextView
               android:id="@+id/textView4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="@string/app_bio"
               android:textColor="@color/teal_700"
               android:textSize="14sp" />

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="10dp"
               android:backgroundTint="@color/black"
               app:cardCornerRadius="10dp">

               <LinearLayout
                   android:id="@+id/telegram"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:padding="16dp"
                   android:background="#5602655B">


                   <ImageView
                       android:id="@+id/imgTelegram"
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       app:srcCompat="@drawable/ic_baseline_search_24" />

                   <TextView
                       android:id="@+id/textView"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="16dp"
                       android:text="Telegram"
                       android:textColor="@color/teal_200" />
               </LinearLayout>

           </androidx.cardview.widget.CardView>



           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:text="@string/app_bio1"
               android:textColor="@color/teal_700"
               android:textSize="14sp" />

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="10dp"
               android:backgroundTint="@color/black"
               app:cardCornerRadius="10dp">

               <LinearLayout
                   android:id="@+id/request"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:padding="16dp"
                   android:background="#5602655B">


                   <de.hdodenhof.circleimageview.CircleImageView
                       android:id="@+id/imgRequest"
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       app:srcCompat="@drawable/ic_baseline_search_24" />

                   <TextView
                       android:id="@+id/textView5"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="16dp"
                       android:text="Request"
                       android:textColor="@color/teal_200" />
               </LinearLayout>

           </androidx.cardview.widget.CardView>



           <TextView
               android:id="@+id/textView6"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="20dp"
               android:text="@string/bug"
               android:textColor="@color/teal_200" />

           <TextView
               android:id="@+id/version"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Version"
               android:textAlignment="center"
               android:textColor="@color/teal_700" />

       </LinearLayout>

   </ScrollView>


</LinearLayout>